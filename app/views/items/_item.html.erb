<%= link_to item do %>
  <div class="item row-fluid">
    <div class="img span3 hidden-phone">
      <%= item.images.first == nil ? image_tag("default_index_image.png") : render(item.images.first) %>
    </div>

    <div class="main_info span6">
      <div class="title"><%= item.title %></div>
      <hr>
      <div class="description"><%= item.description %></div>
      <hr>
      <div class="address">Address: <%= item.address %></div>
      <div class="seller"><%= item.user.email %></div>
    </div>

    <div class="extra_info span3">
      <div class="votes_container">
        <div class="votes">
          <div class="up_vs_down" style="width: 60%"></div>
        </div>
        <div class="vote_buttons">
          <button class="btn"><i class="icon-thumbs-up"></i></button>
          <button class="btn"><i class="icon-thumbs-down"></i></button>
        </div>
      </div>
      <div class="price"><h1><%= number_to_currency(item.price) %></h1></div>
      <div class="up_votes"><%= item.up_votes == nil ? 0 : item.up_votes %></div>
      <div class="down_votes"><%= item.down_votes == nil ? 0 : item.down_votes %></div>
    </div>
  </div>
<% end %>
